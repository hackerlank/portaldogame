<?xml version="1.0"?>
<config>
    <modules>
        <Sam_Reviews>
            <version>0.1.0</version>
        </Sam_Reviews>
    </modules>
    <frontend>
        <routers>
            <reviews>
                <use>standard</use>
                <args>
                    <module>Sam_Reviews</module>
                    <frontName>reviews</frontName>
                </args>
            </reviews>
        </routers>
        <layout> 
            <updates>
                <reviews>
                    <file>samreviews.xml</file> 
                </reviews>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <reviews>
                <class>Sam_Reviews_Block</class>
            </reviews>
        </blocks>
        <helpers>
            <reviews>
                <class>Sam_Reviews_Helper</class>
            </reviews>
        </helpers>
		<models>
			<reviews>
                <class>Sam_Reviews_Model</class>
				<resourceModel>reviews_mysql4</resourceModel>
            </reviews>
			<core>
				<rewrite>
					<layout>Sam_Reviews_Model_Layout</layout>
				</rewrite>
			</core>
		</models>
		<resources>
        	<reviews_setup>
            	<setup>
                	<module>Sam_Reviews</module>
            	</setup>
            	<connection>
                	<use>core_setup</use>
            	</connection>
        	</reviews_setup>
        	<reviews_write>
            	<connection>
                	<use>core_write</use>
            	</connection>
        	</reviews_write>
        	<reviews_read>
            	<connection>
                	<use>core_read</use>
            	</connection>
        	</reviews_read>
    	</resources>
    </global>
	<adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <reviews>
                            <title>Product Reviews</title>
                            <sort_order>300</sort_order>
                        </reviews>
						<system>
                            <children>
                                <config>
                                        <children>
                                            <reviewssection translate="title" module="reviews">
                                                <title>Banner Section ACL</title>
                                                <sort_order>99</sort_order>
                                            </reviewssection>
                                        </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>   
        </acl>
    </adminhtml>    
</config>